package SudokuSolver;

import java.awt.*;

import javax.swing.*;

public class SudokuGUI extends JFrame {
	public SudokuGUI() {
		super("");

		JPanel commandPanel = new JPanel();
		JPanel drawingPanel = new JPanel();

		super.add(commandPanel, BorderLayout.SOUTH);
		super.add(drawingPanel, BorderLayout.CENTER);

		JButton SolveButton = new JButton("Clear");
		JButton ClearButton = new JButton("Solve");
		commandPanel.add(ClearButton);
		commandPanel.add(SolveButton);

		GridLayout grid = new GridLayout(9, 9, 100, 1);
		drawingPanel.setLayout(grid);
		OneLetterField field = new OneLetterField();
		OneLetterField[][] dahShit = new OneLetterField[9][9];
		for (int i = 0; i < 9; i++) {
			for(int j = 0; j < 9; j++){
				dahShit[i][j] = field; 
			}
			
			//field.setSize(10, 10);
			drawingPanel.add(field);
			field = new OneLetterField();
		}

		pack();
		setVisible(true);

		// SouthPanel.add(new JButton("FAAAK1"));
		// SouthPanel.add(new JButton("W000T"));
		/*
