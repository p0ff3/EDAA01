		JFrame aWindow = new JFrame("This is a Grid Layout");
		
	    aWindow.setBounds(30, 30, 300, 300);
	    aWindow.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	    GridLayout grid = new GridLayout(9, 9, 30, 20);
	    Container content = aWindow.getContentPane(); 
	    content.setLayout(grid); 
	    OneLetterField button = null;
	    for (int i = 1; i <= 9*9; i++) {
	      content.add(button = new OneLetterField());
	      button.setPreferredSize( new Dimension( 20, 24 ) );
	    }
	    aWindow.setVisible(true);
	    JPanel northPanel = new JPanel();
	    frame.pack();
		frame.add(northPanel, BorderLayout.NORTH);
		frame.add(new JButton("three"));
		frame.add(new JButton("four"));
		frame.pack();
	    aWindow.pack();
	}
	@Override
	public Dimension getPreferredSize(){
		return new Dimension(800,800);
	}
}