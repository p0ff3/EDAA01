package sudokuSolver;

import javax.swing.*;

import java.awt.event.*;

public class SolveButton extends JButton implements ActionListener {
	private SudokuGUI view;
	/**
	 * Skapar en knapp.
	 * @param view
	 */
	public SolveButton(SudokuGUI view) {
		super("Solve");
		this.view = view;
		addActionListener(this);
	}
	/**
	 * Löser sudokut och anropar metoder för att skriva ut det igen.
	 */
	public void actionPerformed(ActionEvent e) {
		SudokuSolver sud = new SudokuSolver(view.getBoard());
		sud.solve();
		view.setBoard(sud.solve());
	}
}