	private JButton ClearButton(SudokuGUI sudokuGUI) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public Dimension getPreferredSize() {
		return new Dimension(600, 600);
	}

	protected int[][] getBoard() {
		int[][] board = new int[9][9];
		for (int i = 0; i < 9; i++) {
			for (int j = 0; j < 9; j++) {
				if (drawingPanel.fields[i][j].getText().length() == 0) {
					board[i][j] = 0;
				} else {

					board[i][j] = Character
							.getNumericValue(drawingPanel.fields[i][j]
									.getText().charAt(0));
				}

			}
		}
		return board;
	}
	/**
	 * Sätter värden i GUIt från matrisen med värdena.
	 * @param ints - Värden från matrisen
	 */
	protected void setBoard(int[][] ints) {
		for (int i = 0; i < 9; i++) {
			for (int j = 0; j < 9; j++) {
				if(ints[i][j] == 0){
					drawingPanel.fields[i][j].setText("");
				}else{
				drawingPanel.fields[i][j].setText(((Integer) ints[i][j])
						.toString());
				}
			}
		}
	}
	// TODO Auto-generated method stub
	/**
	 * Sätter alla fields till ""
	 */
	public void clear() {
		for (int i = 0; i < 9; i++) {
			for (int j = 0; j < 9; j++) {
				drawingPanel.fields[i][j].setText("");
			}
		}
		// TODO Auto-generated method stub
		
	}

}
